<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:transitionGroup="false"
    app:layout_constraintWidth_percent="0.9"
    tools:context=".BookActivity">

    <!-- TOOLBAR BACKGROUND COLOR IS ONLY TO INDICATE THE SIZE. REMOVE ONCE DONE CODING -->

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/materialToolbar"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/bigheader"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:navigationIcon="@drawable/ic_baseline_arrow_back_24"
        app:title=" "
        app:titleCentered="false"
        app:titleMargin="0dp"
        app:titleTextAppearance="@style/bigheader"
        app:titleTextColor="#000000" />

    <TextView
        android:id="@+id/toolbar_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:ellipsize="end"
        android:lineSpacingMultiplier="0.85"
        android:maxLines="2"
        android:text="New booking"
        android:textColor="#000000"
        android:textSize="70dp"
        app:layout_constraintBottom_toBottomOf="@+id/materialToolbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/materialToolbar" />

    <Button
        android:id="@+id/buttonBookHalls"
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/button_style"
        android:text="Halls"
        android:textColor="#000000"
        android:textColorHighlight="@color/appgreenalpha"
        android:textSize="18sp"
        app:icon="@drawable/ic_outline_domain_24"
        app:iconGravity="textTop"
        app:iconPadding="1dp"
        app:iconSize="24dp"
        app:iconTint="#000000"
        app:layout_constraintEnd_toStartOf="@+id/buttonCourts"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/buttonBookStudyCube"
        app:layout_constraintTop_toBottomOf="@+id/searchBook"
        app:layout_constraintWidth_percent="0.29" />

    <Button
        android:id="@+id/buttonCourts"
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/button_style"
        android:text="Courts"
        android:textColor="#000000"
        android:textColorHighlight="@color/appgreenalpha"
        android:textSize="18sp"
        app:icon="@drawable/ic_outline_sports_basketball_24"
        app:iconGravity="textTop"
        app:iconPadding="1dp"
        app:iconSize="24dp"
        app:iconTint="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/buttonBookHalls"
        app:layout_constraintTop_toBottomOf="@+id/searchBook"
        app:layout_constraintWidth_percent="0.29" />

    <Button
        android:id="@+id/buttonBookStudyCube"
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/button_style"
        android:lineSpacingMultiplier="0.85"
        android:singleLine="false"
        android:text="Study cubes"
        android:textAllCaps="false"
        android:textColor="#000000"
        android:textColorHighlight="@color/appgreenalpha"
        android:textIsSelectable="false"
        android:textSize="18sp"
        app:icon="@drawable/ic_outline_school_24"
        app:iconGravity="textTop"
        app:iconPadding="1dp"
        app:iconSize="24dp"
        app:iconTint="#000000"
        app:layout_constraintEnd_toStartOf="@+id/buttonBookHalls"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/searchBook"
        app:layout_constraintWidth_percent="0.29" />

    <android.widget.SearchView
        android:id="@+id/searchBook"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/button_style"
        android:baselineAligned="false"
        android:iconifiedByDefault="false"
        android:paddingHorizontal="10dp"
        android:pointerIcon="none"
        android:queryBackground="@android:color/transparent"
        android:queryHint="Search college"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/materialToolbar"
        app:layout_constraintWidth_percent="0.9"
        app:actionViewClass="android.appcompat.widget.SearchView"
        app:showAsAction="ifRoom|collapseActionView"
        />

    <TextView
        android:id="@+id/textPickaDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="8dp"
        android:text="Pick a date"
        android:textColor="#000000"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonBookStudyCube" />

    <TextView
        android:id="@+id/textPickaTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="8dp"
        android:text="Pick a time"
        android:textColor="#000000"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonBookToday" />

    <TextView
        android:id="@+id/textBookRequest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="8dp"
        android:text="Requests"
        android:textColor="#000000"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonStartDatePicker" />

    <Button
        android:id="@+id/buttonBookTommorow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_weight="1"
        android:background="@drawable/button_style"
        android:text="Tommorow"
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/buttonBookToday"
        app:layout_constraintTop_toBottomOf="@+id/textPickaDate" />

    <Button
        android:id="@+id/buttonBookToday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="8dp"
        android:layout_weight="1"
        android:background="@drawable/button_style"
        android:text="Today"
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textPickaDate" />

    <Button
        android:id="@+id/buttonStartDatePicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="8dp"
        android:layout_weight="1"
        android:background="@drawable/button_style"
        android:text="Start"
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textPickaTime" />

    <Button
        android:id="@+id/buttonDatePicker"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_weight="1"
        android:background="@drawable/circle_outline"
        android:contentDescription="Button for date picker"
        android:contextClickable="false"
        android:includeFontPadding="false"
        app:icon="@drawable/ic_outline_calendar_month_24"
        app:iconGravity="textStart"
        app:iconPadding="0dp"
        app:iconSize="24dp"
        app:iconTint="#000000"
        app:layout_constraintStart_toEndOf="@+id/buttonBookTommorow"
        app:layout_constraintTop_toBottomOf="@+id/textPickaDate" />

    <Button
        android:id="@+id/buttonEndDatePicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_weight="1"
        android:background="@drawable/button_style"
        android:text="End"
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/iconRight"
        app:layout_constraintTop_toBottomOf="@+id/textPickaTime" />

    <ImageView
        android:id="@+id/iconRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toEndOf="@+id/buttonStartDatePicker"
        app:layout_constraintTop_toBottomOf="@+id/textPickaTime"
        app:srcCompat="@drawable/ic_outline_arrow_forward_24" />

    <Button
        android:id="@+id/buttonPay"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/longbutton"
        android:onClick="goToBookingComplete"
        android:text="Book!"
        android:textColor="#000000"
        android:textSize="24sp"
        app:cornerRadius="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintWidth_percent="0.9" />

    <EditText
        android:id="@+id/editTextBookRequest"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/button_style"
        android:backgroundTint="#1A000000"
        android:ems="10"
        android:hint="Extra equipments, stationeries, etc."
        android:inputType="textPersonName"
        android:paddingStart="30dp"
        android:paddingEnd="30dp"
        android:textColorHighlight="@color/appgreenalpha"

        android:textSize="20sp"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintHorizontal_bias="0.511"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textBookRequest"
        app:layout_constraintWidth_percent="0.9" />


</androidx.constraintlayout.widget.ConstraintLayout>